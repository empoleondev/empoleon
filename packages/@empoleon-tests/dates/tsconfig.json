{
  "include": ["./src", "../../../@types", "../../../vitest.d.ts"],
  "exclude": ["./lib", "./esm", "./cjs"],
  "compilerOptions": {
    "rootDir": "src",

    "declaration": true,
    "declarationDir": "lib",
    "types": ["node", "vitest/globals", "@testing-library/jest-dom", "vitest-axe"],
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
  }
}
